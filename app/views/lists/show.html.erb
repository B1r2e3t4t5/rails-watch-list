
<div class="container">
<h1>Movies</h1>
<p>
<% @list.movies.each do |movie|  %>
<% bookmark = Bookmark.find_by(list: @list, movie: movie)%>
    <h1><%= movie.title %></h1>
    <p><%= movie.overview %></p>
    <p><%= movie.rating %></p>
    <p><%= bookmark.comment %></p>
  <% end %>
<%= link_to "Add a bookmark", new_list_bookmark_path(@list) %>
<%= link_to "Back to all lists", lists_path %>
</p>
</div>
